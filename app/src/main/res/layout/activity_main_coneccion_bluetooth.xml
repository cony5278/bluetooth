<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.evssa.bluetooth.bluetooth.actividad.MainConeccionBluetooth"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgBluetoothConeecion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_weight="0.60" />
    <ImageView
        android:id="@+id/imgBluetoothConeecionNotVinculado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_weight="0.60" />
    <Button
        android:id="@+id/btnConexionBLuetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coneccion" />
</LinearLayout>
